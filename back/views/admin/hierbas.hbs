<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-7">
            <h3>LISTADO DE HIERBAS</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/hierbas/agregar"><i class="fa fa-plus" aria-hidden="true">NUEVO</i></a>
        </div>
    </div>
    
    
    
    <div class="row">
        <div class="col">
            <table class="table-dark">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">NOMBRE DE HIERBA</th>
                        <th scope="col">Imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each hierbas}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{nombre}}</td>
                            <td>{{{picture}}}</td>
                            <td class="text-center">
                                <a href="/admin/hierbas/modificar/{{id}}" title="Editar" class="btn btn-secondary">
                                    <i class="fa fa-pencil"></i>
                                </a>
                                <a href="/admin/hierbas/eliminar/{{id}}" title="Eliminar" class="btn btn-secondary">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {{/each}}                        
                </tbody>
            </table>
        </div>
    </div>
    
    
    
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{ usuario }} ! <a class="btn btn-danger" href="/admin/login/logout">Cerrar Sesion <i class="fas fa-sign-out-alt"></i></a></p>

        </div>
    </div>


</div>